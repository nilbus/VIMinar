set shiftwidth=2
set softtabstop=2
set tabstop=2
set expandtab
set autoindent
set hlsearch
set showmatch
syntax on
set timeoutlen=0
set matchtime=1
set wildmenu
set wildmode=list:longest
set hidden
set history=1000
runtime macros/matchit.vim
set ignorecase 
set incsearch
set smartcase
set title
cmap sp set spell spelllang=en_us
filetype on
filetype plugin on
